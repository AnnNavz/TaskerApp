<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskerApp.CategoryView"
             Title="CategoryView"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto">

        <Border WidthRequest="400" HeightRequest="170" Stroke="Transparent">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#7B81FF" Offset="0.1" />
                    <GradientStop Color="#4A52F3" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,15,15"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="Black"
                Offset="0,3"
                Radius="3"
                Opacity="0.5"/>
            </Border.Shadow>

            <VerticalStackLayout>

                <Label Text=".NET MAUI COURSE"
                   TextColor="White"
                   FontSize="28"
                   FontFamily="Cent"
                   FontAttributes="Bold"
                   Margin="40,50,0,0"/>

                <Label Text="Total: "
                   TextColor="White"
                   FontSize="16"
                   FontFamily="Poppins"
                   Margin="40,3,0,0"/>

                <Label Text="Pending: "
                   TextColor="White"
                   FontSize="16"
                   FontFamily="Poppins"
                   Margin="40,0,0,0"/>

            </VerticalStackLayout>
        </Border>

        <VerticalStackLayout Grid.Row="1">

            <HorizontalStackLayout>


                <Label Text="Completed"
                   FontSize="16"
                   Margin="30,30,0,0"
                   FontFamily="Poppins"
                   TextColor="#5E5E5E"/>

                <Button Text="ADD TASK +"
                        WidthRequest="120"
                        HeightRequest="25"
                        FontSize="14"
                        FontFamily="Cent"
                        CornerRadius="15"
                        
                        BackgroundColor="#9DBCFF"
                        TextColor="#4A52F3"
                        FontAttributes="Bold"
                        Margin="135,20,0,0"
                        >
                    <Button.Shadow>
                        <Shadow Brush="Black"
                                Offset="0,2"
                                Radius="3"
                                Opacity="0.5" />
                    </Button.Shadow>
                </Button>


            </HorizontalStackLayout>

            <Frame BackgroundColor="#DCE1EE"
               WidthRequest="350"
               HeightRequest="80"
               BorderColor="Transparent"
               Margin="0,20,0,0"/>

            <Frame BackgroundColor="#DCE1EE"
               WidthRequest="350"
               HeightRequest="80"
               BorderColor="Transparent"
               Margin="0,10,0,0"/>


            <Label Text="Pending"
                   FontSize="16"
                   Margin="30,30,0,0"
                   FontFamily="Poppins"
                   TextColor="#5E5E5E"/>

            <Frame BackgroundColor="#DCE1EE"
               WidthRequest="350"
               HeightRequest="80"
               BorderColor="Transparent"
               Margin="0,20,0,0"/>

            <Frame BackgroundColor="#DCE1EE"
               WidthRequest="350"
               HeightRequest="80"
               BorderColor="Transparent"
               Margin="0,10,0,0"/>

        </VerticalStackLayout>

    </Grid>



</ContentPage>